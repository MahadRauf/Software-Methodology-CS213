<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="641dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="INSERT LATER DONUT AND COFFEE SHOP"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="154dp"
            android:orientation="horizontal">


            <Button
                android:id="@+id/addCoffee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="addCoffee"
                android:text="FIn ADD COFFEE" />

            <Button
                android:id="@+id/addDonut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="addDonut"
                android:text="ADD DONUTS" />
        </LinearLayout>

        <Button
            android:id="@+id/currentOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="viewCurrentOrder"
            android:text="View Current Order" />

        <Button
            android:id="@+id/storeOrders"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:insetTop="50dp"
            android:onClick="viewStoreOrders"
            android:text="View Store Orders" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>